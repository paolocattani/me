---
export const prerender = false;

import matter from "gray-matter";
import Layout from "../../layouts/Layout.astro";

interface PostMeta {
  slug: string;
  title: string;
  date: string;
  description?: string;
}

const POSTS_PREFIX = "posts/";

let posts: PostMeta[] = [];

try {
  const runtime = (Astro.locals as { runtime?: { env?: Env } }).runtime;
  const bucket = runtime?.env?.BLOG_BUCKET;

  if (bucket) {
    const listed = await bucket.list({ prefix: POSTS_PREFIX });
    const objects = listed.objects.filter((obj) => obj.key.endsWith(".md"));

    const postPromises = objects.map(async (obj) => {
      const r2Object = await bucket.get(obj.key);
      if (!r2Object) return null;
      const text = await r2Object.text();
      const { data } = matter(text);
      const slug = obj.key.replace(POSTS_PREFIX, "").replace(/\.md$/, "");
      return {
        slug,
        title: (data.title as string) ?? slug,
        date: (data.date as string) ?? obj.uploaded?.toISOString() ?? "",
        description: data.description as string | undefined,
      };
    });

    const results = await Promise.all(postPromises);
    posts = results
      .filter((p): p is PostMeta => p !== null)
      .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
  }
} catch (err) {
  console.error("Failed to load blog posts:", err);
}
---

<Layout title="Blog | Paolo Cattani" description="Blog posts by Paolo Cattani - Software Engineer & Tech Lead.">
  <section class="container mx-auto px-6 py-24">
    <h1 class="text-4xl sm:text-5xl font-bold mb-4">
      <span class="text-emerald-400">
        Blog
      </span>
    </h1>
    <p class="text-slate-400 text-lg mb-16 max-w-2xl">
      Thoughts on software, architecture, and building systems that scale.
    </p>
    {posts.length > 0 ? (
      <ul class="space-y-8">
        {posts.map((post) => (
          <li>
            <a
              href={`/blog/${post.slug}`}
              class="block rounded-2xl border border-slate-800 bg-slate-900/50 p-8 transition-all hover:border-emerald-500/50 hover:scale-[1.01]"
            >
              <h2 class="text-2xl font-bold text-white mb-2">{post.title}</h2>
              <time class="text-sm text-slate-500" datetime={post.date}>
                {new Date(post.date).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
              {post.description && (
                <p class="mt-2 text-slate-400">{post.description}</p>
              )}
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <div class="rounded-2xl border border-slate-800 bg-slate-900/50 p-12 text-center">
        <p class="text-slate-400 mb-4">No posts yet.</p>
        <p class="text-sm text-slate-500">
          Upload Markdown files to your R2 bucket under <code class="rounded bg-slate-800 px-2 py-1">posts/</code> to see them here.
        </p>
      </div>
    )}
  </section>
</Layout>
